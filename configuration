nusb_tag="$(git describe --tags)"
nusb_timestamp="$(date +%Y%m%d%H%M%S --date="@$(git show -s --format=%ct)")"
songs_tag="$(cd songs ; git describe --tags)"
songs_timestamp="$(cd songs ; date +%Y%m%d%H%M%S --date="@$(git show -s --format=%ct)")"
export nusb_version="v. ${nusb_tag:-${nusb_timestamp}}"
export songs_version="v. ${songs_tag:-${songs_timestamp}}"
export nusb_bookname="$( cat config/bookname )"
export newcover_template_name="$( cat config/newcover_template_name )"
