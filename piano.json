{
    "include": ["keyboard", "modern3"],
    "settings": {
        "decapo": "true"
    },
    "pdf": {
        "info": {
            "title": "nomike's ukulele songbook - piano edition",
            "author": "nomike at nomike dot com",
            "subject": "A songbook for piano, keyboard, guitar, and ukulele",
            "keywords": "songbook piano"
        },
        "kbdiagrams" : {
            "show"     :  "right",
            "width"    :  5.5,       // of a single key
            "height"   :  23,        // of the diagram
            "keys"     :  14,        // or 7, 10, 14, 17, 21
            "base"     :  "C",       // or "F"
            "linewidth" : 0.1,       // fraction of a single key width
            "pressed"  :  "#959595", // colour of a pressed key
            "hspace"   :  3.95,      // ??
            "vspace"   :  0.3        // fraction of height            
        },
        "formats": {
            "title": {
                "subtitle": ["%{artist|%{artist}}%{subtitle|%{subtitle}}%{key| / Key %{key}}", "", ""]
            }
        }
    }
}