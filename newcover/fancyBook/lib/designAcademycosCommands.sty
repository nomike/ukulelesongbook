\tcbset{
	boxGeneralMessageStyle/.style={
		flush right,
		empty, 
		width=8.5cm
	}
}
\newenvironment{dedication}[1][Dedication]{
	\thispagestyle{empty}
	\vspace*{\stretch{1}}
	\begin{tcolorbox}[boxGeneralMessageStyle]
		\raggedright{\Large\textbf{#1}.}\\
	}{
	\end{tcolorbox}
	\vspace*{\stretch{3}}
	\clearpage
}
\newenvironment{initialmessage}{
	\thispagestyle{empty}
	\vspace*{\stretch{1}}
	\hfill
	\begin{tcolorbox}[boxGeneralMessageStyle]
	}{
	\end{tcolorbox}
	\vspace*{\stretch{3}}
	\clearpage
}
