    // },

    // // Diagnostig messages.
    // "diagnostics" : {
    //   "format" : "\"%f\", line %n, %m\n\t%l",
    // },

    "contents": [{
            "fields": ["songindex"],
            "label": "Table of Contents",
            "line": "%{title}",
            "fold": false,
            "omit": true,
        },
        {
            "fields": ["sorttitle", "artist"],
            "label": "Table of Contents",
            "line": "%{title}%{artist| - %{}}",
            "fold": false,
            "omit": false,
        },
        {
            "fields": ["artist", "sorttitle"],
            "label": "Contents by Artist",
            "line": "%{artist|%{} - }%{title}",
            "fold": false,
            "omit": true,
        },
    ],

