        // // Formats.
        "formats": {
            //     // Titles/Footers.

            //     // Titles/footers have 3 parts, which are printed left,
            //     // centered and right.
            //     // For even/odd printing, the order is reversed.

            //     // By default, a page has:
            "default": {
                //         // No title/subtitle.
                //     	"title"     : null,
                //     	"subtitle"  : null,
                // 	// Footer is title -- page number.
                "footer": ["%{title} - %{artist}", "", "%{page}"],
            },
            //     // The first page of a song has:
