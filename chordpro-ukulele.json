    // // Printing chord diagrams.
    // // "auto": automatically add unknown chords as empty diagrams.
    // // "show": prints the chords used in the song.
    // //         "all": all chords used.
    // //         "user": only prints user defined chords.
    // // "sorted": order the chords by key.
    // "diagrams" : {
    //     "auto"     :  false,
    //     "show"     :  "all",
